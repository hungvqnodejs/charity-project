<%- include('../includes/head.ejs') %>
<link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Custom styles for this template-->
    <link href="/css/admin.css" rel="stylesheet">
    <link href="/css/main.css" rel="stylesheet">
</head>

<body>  
    <header class="masthead">
          <!-- Page Wrapper -->
    <div id="wrapper">

 <%- include('../includes/navigation-admin.ejs') %>
  
    <!-- End of Page Wrapper -->
       
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <br><br>
        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Quản lý người dùng</h1>
        <br>
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Thông tin người dùng</h6>
            </div>

 <%- include('../includes/navigation-tab.ejs') %>  
    
            <div class="card-body">
              <% if(typeof errorMessageEV != 'undefined') { %>
                <% errorMessageEV.forEach(function(error) { %>
                  <div class="alert alert-danger alert-dismissible fade show " role="alert" >
                    <%= error.msg %>
                   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                 </div>
                <% }) %>
              <% } %>
                <div class="container">
                    <main>
                      
                      <div class="row g-5">
                        <div class="col-12 order-md-last">
                          <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span >Thông tin quyên góp</span>
                          </h4>
                              <div class="table-responsive">
                                <table class="table" id="dataTable" cellspacing="0">     
                                    <thead>
                                      <tr>
                                          <th>Ngày</th>
                                          <th class="w-25">Dự án</th>
                                          <th>Hình thức</th>
                                          <th> Số tiền</th>
                                          <th> Ngân hàng</th>
                                          <th>Mã giao dịch</th>
                                          <th class="pl-0"style="width: 6%;">
                                          </th>
                                      </tr>
                                  </thead>         
                                      <tbody>
                                        <% if (donate) { %>
                                          <% for (let dona of donate) { %>  
                                            <tr>
                                                <td class="align-middle"><%= dona.createdAt.toLocaleString('en-GB', { year: 'numeric', month: '2-digit', day: '2-digit' }) %></td>
                                                <td class="align-middle" style="width: 30%;">
                                                  <h6 class="my-0 title-text fw-bold"><%= dona.project.title %></h6>
                                                
                                                </td>
                                                <td class="align-middle"><%= dona.payments %></td>
                                                <td class="align-middle"><%= dona.money.toLocaleString('en-US') %></td>
                                                <td class="align-middle"><%= dona.bank %></td>
                                                <td class="align-middle"> <%= dona.tradingCode %></td>
                                                <td class="align-middle pl-0" style="width: 6%;">
                                                    <a class="btn bg-white" href="/admin/list-project/<%= dona.project.projectId %>"> <span class="icon text-info ">
                                                        <i class="fa-solid fa-arrow-right-long fa-2xl "></i></span>
                                                    </a>
                                                </td>
                                            </tr>   
                                          <% } %>
                                        <% } %>        
                                      </tbody>
                                  </table>
                            </div>
                          </ul>
                  
                          
                        </div>
                      </div>
                    </main>
                
                  </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

    </div>
<!-- End of Main Content -->
    </header>
<%- include('../includes/javascript.ejs') %>
<%- include('../includes/end.ejs') %>

